{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "s-hub",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "http": {
                "scope": ["http://**", "https://**"]
            },
            "shell": {
                "all": false,
                "open": true
            },
            "fs": {
                "all": true,
                "scope": ["*", "$DOWNLOAD/*"]
            },
            "window": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.xiaoshen.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "shortDescription": "万物可存储",
            "longDescription": "只要你想，没有不可以",
            "windows": {
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                },
                "wix": {
                    "language": "zh-CN"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://sjj1024.github.io/DataHub/FileData/update/index.json"
            ],
            "dialog": false,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMxNDAyRUI1NjlDQThCRUYKUldUdmk4cHB0UzVBd2FFbk91T1FXSnVWdERRK09tY0dSM2tyV01Tb2pIUVM2ME5qRDJuZGMwalEK"
        },
        "windows": [
            {
                "label": "customization",
                "fullscreen": false,
                "resizable": true,
                "title": "FileHub",
                "fileDropEnabled": false,
                "width": 1031,
                "height": 580,
                "center": true,
                "decorations": false
            }
        ]
    }
}
